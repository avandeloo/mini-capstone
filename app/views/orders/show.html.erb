<div class="well3">
      <h1>Order</h1>
      <h2>Order ID: <%= "56724300#{@order.id}" %></h2>
      <h2>Product: <%= @order.product.name %></h2>
      <div class="images">
      <%= image_tag @order.product.default_image %>
      </div>
      <h2>Email: <%= @order.user.email %></h2>
      <h2>Unit Price: <%= @order.product.price %></h2>
      <h2>Quantity: <%= @order.quantity %></h2>
      <h2>Subtotal: <%= number_to_currency(@order.subtotal) %></h2>
      <h2>Tax: <%= number_to_currency(@order.tax) %></h2>
      <h2>Total: <%= number_to_currency(@order.total) %></h2>

</div>
