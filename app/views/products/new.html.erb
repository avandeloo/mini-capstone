<h1>New Product</h1>

<div class="well2">
  <div class="container">
    <%= form_tag "/products", method: :post do %>
      <div>
        <label class ="label">Name: </label><input type="text" name="name">
      </div>
      <div>
        <label class ="label">Price: </label><input type="integer" name="price">
      </div>
      <div>
        <label class ="label">Image Link: </label><input type="text" name="image">
      </div>
      <div>
        <label class ="label">Description: </label><input type="text" name="description">
      </div>
      <div>
        <label class ="label">Release Date: </label><input type="text" name="release_date">
      </div>
      <p></p>
      <div>
        <label class = "label"><%= label_tag :supplier %>
        <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %></label>
      </div>
      <p></p>
      <input type="submit" name="Create New Product" class = "submitBtn">
    <% end %>
  </div>
</div>