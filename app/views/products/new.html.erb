<h1>New Product</h1>

<%= form_tag "/products", method: :post do %>
  <div>
    Name: <input type="text" name="name">
  </div>
  <div>
    Price: <input type="integer" name="price">
  </div>
  <div>
    Image Link: <input type="text" name="image">
  </div>
  <div>
    Description: <input type="text" name="description">
  </div>
  <div>
    Release Date: <input type="text" name="release_date">
  </div>
  <input type="submit" name="Create New Product">
<% end %>