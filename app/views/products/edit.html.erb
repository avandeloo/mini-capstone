<h1>Update Product</h1>

<%= form_tag "/products/#{@product.id}", method: :patch do %>

  <div>
    Name: <input type="text" name="name" value="<%= @product.name %>">
  </div>
  <div>
    Price: <input type="integer" name="price" value="<%= @product.price %>">
  </div>
  <div>
    Image Link: <input type="text" name="image" value="<%= @product.image %>">
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @product.description %>">
  </div>
  <div>
    Release Date: <input type="text" name="release_date" value="<%= @product.release_date %>">
  </div>
  <input type="submit" name="Update Product">

<% end %>
